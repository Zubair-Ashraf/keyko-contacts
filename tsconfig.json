{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "lib/types",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ]
}